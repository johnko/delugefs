#!/bin/sh

ZFS_DATASET="scratch/dfs"
CLUSTER_USER="root"
USER_ID="0"
CLUSTER_ID="${1}"
shift
if [ "x" != "x${1}" ]; then
    ZFS_DATASET="${1}"
    shift
fi

while mount | grep /dgfs/${CLUSTER_ID} ; do
    echo umount -f /dgfs/${CLUSTER_ID}
    umount -f /dgfs/${CLUSTER_ID}
done

pkill ${ZFS_DATASET}
pkill ${ZFS_DATASET}2

pkill gtfcwatch

umount -f /${ZFS_DATASET}/_delugefs_${CLUSTER_ID}/tmp/
umount -f /${ZFS_DATASET}2/_delugefs_${CLUSTER_ID}/tmp/

zfs destroy -r ${ZFS_DATASET}
zfs destroy -r ${ZFS_DATASET}2
