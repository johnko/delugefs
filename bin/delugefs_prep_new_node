#!/bin/sh

EXISTINGNODE="${1}"
if [ "x" == "x${EXISTINGNODE}" ]; then
    echo "ERROR: missing Existing Node as arg1"
    exit 1
fi

cat <<EOF
Add this to an existing node's /usr/home/delugefs/.ssh/authorized_keys2 :
EOF

cat /usr/home/delugefs/.ssh/id_ed25519.pub

echo "Press Enter to attemp SSH connection"
read

su -l delugefs -c "ssh ${EXISTINGNODE} hostname"
